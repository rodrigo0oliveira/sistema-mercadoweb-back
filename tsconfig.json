{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",

    "types": ["node", "express"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src", "src/@types"]
}

